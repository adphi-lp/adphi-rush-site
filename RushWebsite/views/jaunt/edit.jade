extends /common/layout
include /common/mixins

block head
  title='Jaunt'
  link(rel='stylesheet',href=basepath+'/css/vote.css')

block content
  .jaunt-action-wrapper
    h2.title Edit Jaunt
    form.jaunt-action-content(method='post',action='#')
      .jaunt-action-item
        span.jaunt-action-name Name
        input.jaunt-action-input(type='text',required,name = 'jName',value=jaunt.name)
      .jaunt-action-item
        span.jaunt-action-name Time
        input.jaunt-action-input(type='datetime-local',required,name = 'jTime',value=jaunt.dateISO)
      .jaunt-post
        input#save(type='submit',value='Submit')
      input(type='hidden', name='jID', value=jaunt._id)